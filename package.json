{
    "title": "Guillaume Sainthillier",
    "name": "sainthillier",
    "version": "1.2.0",
    "private": true,
    "description": "https://sainthillier.fr",
    "homepage": "https://sainthillier.fr",
    "license": "MIT",
    "type": "module",
    "author": "Guillaume Sainthillier",
    "contributors": [
        "David Miller (http://davidmiller.io/)"
    ],
    "scripts": {
        "dev": "vite build --mode development",
        "watch": "vite build --watch --mode development",
        "build": "vite build",
        "build:hugo": "yarn build && yarn hugo",
        "build:hugo:preview": "yarn build && yarn hugo -D -F",
        "hugo": "hugo --gc --minify",
        "hugo:dev": "hugo server -D",
        "prepare": "husky install",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --check \"**/*.{js,css,md,json,yml,yaml}\"",
        "format:fix": "prettier --write \"**/*.{js,css,md,json,yml,yaml}\"",
        "knip": "knip",
        "knip:fix": "knip --fix",
        "size:json": "node scripts/bundle-size.js"
    },
    "dependencies": {
        "@webcomponents/custom-elements": "^1.6.0",
        "lazysizes": "^5.3.2",
        "lite-youtube-embed": "^0.3.3",
        "lucide": "^0.563.0",
        "wordcloud": "^1.2.3"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.39.1",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^24.0.0",
        "@vitejs/plugin-legacy": "^7.0.0",
        "eslint": "^9.39.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^17.0.0",
        "hugo-extended": "^0.155.0",
        "husky": "9.1.7",
        "knip": "^5.67.1",
        "lint-staged": ">=16.2.6",
        "prettier": "^3.6.2",
        "regenerator-runtime": "^0.14.1",
        "tailwindcss": "^4.1.18",
        "terser": "^5.37.0",
        "typescript": "^5.7.3",
        "vite": "^7.0.0"
    },
    "lint-staged": {
        "*.{css,md}": "prettier --write",
        "*.js": "eslint --fix"
    }
}
