{
    "title": "Guillaume Sainthillier",
    "name": "sainthillier",
    "version": "1.2.0",
    "private": true,
    "description": "https://sainthillier.fr",
    "homepage": "https://sainthillier.fr",
    "license": "MIT",
    "author": "Guillaume Sainthillier",
    "contributors": [
        "David Miller (http://davidmiller.io/)"
    ],
    "scripts": {
        "dev": "vite",
        "watch": "vite build --watch",
        "build": "NODE_ENV=production BUILD_MODE=modern vite build && NODE_ENV=production BUILD_MODE=legacy vite build",
        "build:hugo": "yarn build && hugo --gc --minify",
        "build:hugo:preview": "yarn build && hugo -D -F",
        "hugo": "hugo --gc --minify",
        "hugo:dev": "hugo server -D",
        "prepare": "husky install",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --check \"**/*.{js,scss,md,json,yml,yaml}\"",
        "format:fix": "prettier --write \"**/*.{js,scss,md,json,yml,yaml}\"",
        "knip": "knip",
        "knip:fix": "knip --fix"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^7.1.0",
        "@fortawesome/fontawesome-svg-core": "^7.1.0",
        "@fortawesome/free-brands-svg-icons": "^7.1.0",
        "@fortawesome/free-solid-svg-icons": "^7.1.0",
        "@webcomponents/custom-elements": "^1.6.0",
        "bootstrap": "^5.3.8",
        "lazysizes": "^5.3.2",
        "lite-youtube-embed": "^0.3.3",
        "polyfill-library": "^4.8.0",
        "wordcloud": "^1.2.3"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.39.1",
        "@types/node": "^22.10.5",
        "@vitejs/plugin-legacy": "^5.4.3",
        "core-js": "^3.46.0",
        "eslint": "^9.39.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.5.0",
        "hugo-extended": "^0.152.2",
        "husky": "9.1.7",
        "imagemin-jpegtran": "^8.0.0",
        "imagemin-optipng": "^8.0.0",
        "knip": "^5.67.1",
        "lint-staged": ">=16.2.6",
        "prettier": "^3.6.2",
        "regenerator-runtime": "^0.14.1",
        "rollup-plugin-purgecss": "^4.1.3",
        "sass": "^1.93.3",
        "sass-embedded": "^1.82.0",
        "terser": "^5.37.0",
        "typescript": "^5.7.3",
        "vite": "^6.0.11"
    },
    "lint-staged": {
        "*.{scss,md}": "prettier --write",
        "*.js": "eslint --fix"
    }
}
